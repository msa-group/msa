{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["es2019", "DOM"],
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "outDir": "lib",
    "allowJs": true,
    "allowUnusedLabels": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "dist",
    "node_modules",
    "test",
    "__test__"
  ]
}
